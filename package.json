{
  "name": "surfline-alerts",
  "version": "0.1.0",
  "description": "Smart surf forecast alerts based on Surfline data",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "check": "npx tsx scripts/check-forecast.ts",
